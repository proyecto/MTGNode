{
  "name": "mtg-minimal",
  "version": "0.0.2",
  "private": true,
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -r \"vite\" \"wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "start": "electron .",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "scry:import": "ELECTRON_RUN_AS_NODE=1 electron scripts/import-scryfall.mjs",
    "dist": "electron-builder -m",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "rebuild-natives": "npx @electron/rebuild -f -w better-sqlite3 --arch=arm64 --electron-version=$(node -p \"require('electron/package.json').version\")",
    "setup-dev": "git pull && npm ci && npm run rebuild-natives && echo 'âœ… Entorno actualizado. Ejecuta ahora: npm run dev'",
    "dist:zip": "npm run build:renderer && npm run rebuild-natives && npx electron-builder --mac zip --publish never",
    "clean": "rimraf dist dist_electron \"${HOME}/Library/Caches/electron-builder\"",
    "dist:dmg": "npm run clean && npm run build:renderer && npm run rebuild-natives && npx electron-builder --mac dmg --publish never"
  },
  "build": {
    "appId": "com.tuempresa.mtgnode",
    "productName": "MTGNode",
    "files": [
      "dist/**",
      "dist/**/*",
      "main.js",
      "electron/**",
      "preload.cjs",
      "package.json",
      "!**/*.map",
      "!dist_electron/**",
      "!**/*.dmg",
      "!**/*.zip",
      "!**/*.icns",
      "!**/*.app",
      "!**/*.asar",
      "!**/*.log"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 150,
          "type": "file"
        },
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.0",
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "vite": "^5.4.21",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stream-json": "^1.9.1"
  }
}
