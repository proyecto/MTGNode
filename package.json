{
  "name": "mtg-minimal",
  "version": "0.0.2",
  "private": true,
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -r \"vite\" \"wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "db:migrate": "electron . --migrate-only",
    "reset": "bash scripts/reset-all.sh",
    "scry:import": "ELECTRON_RUN_AS_NODE=1 npx electron scripts/import-scryfall.mjs",
    "dist": "electron-builder -m",
    "rebuild-natives": "npx @electron/rebuild -f -w better-sqlite3 --arch=arm64 --electron-version=$(node -p \"require('electron/package.json').version\")",
    "setup-dev": "git pull && npm ci && npm run rebuild-natives && echo 'âœ… Entorno actualizado. Ejecuta ahora: npm run dev'",
    "clean": "rimraf dist dist_electron \"${HOME}/Library/Caches/electron-builder\"",
    "build:renderer": "vite build",
    "dist:dmg": "npm run clean && npm run build:renderer && npm run rebuild-natives && npx electron-builder --mac dmg --publish never"
  },
  "build": {
    "appId": "com.tuempresa.mtgnode",
    "productName": "MTGNode",
    "files": [
      "dist/**",
      "dist/**/*",
      "icon/**",
      "main.js",
      "electron/**",
      "preload.cjs",
      "package.json",
      "!**/*.map",
      "!dist_electron/**",
      "!**/*.dmg",
      "!**/*.zip",
      "!**/*.icns",
      "!**/*.app",
      "!**/*.asar",
      "!**/*.log"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 150,
          "type": "file"
        },
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.0",
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "vite": "^5.4.21",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stream-json": "^1.9.1"
  }
}
